<ul class="nav nav-pills nav-show">
  <li><%= link_to 'Public', position_path(@position) %></li>
  <li class="active">
    <%= link_to 'Profile', '#' %>
  </li>
</ul>
<hr />

<h4>Competency Profile (<%= @position.job_title %>)</h4>

  <%= link_to 'Back', positions_path, :class => 'btn btn-primary btn-mini', :id => 'navigationleft' %>

  <%= link_to "Competency Profile (xls)", internal_position_path(@position, format: "xls"), :class => "btn btn-primary btn-small", :id => 'navigationright' %>

<% if current_user.language == 1 %>
  <%= render "cinternal_english" %>
<% elsif current_user.language == 2 %>
  <%= render "cinternal_spanish" %>
<% elsif current_user.language == 3 %>
  <%= render "cinternal_french" %>
  <% else %>
    <%= render "cinternal_english" %>
<% end %>
