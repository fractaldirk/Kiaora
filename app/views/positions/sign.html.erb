<% if current_user.role == 1 %>
  <h4>Sign off the selected job description (<%= @position.job_title %>)</h4>
  <%= form_for(@position) do |f| %>
    <% if @position.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

        <ul>
        <% @position.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <div class="field">
        <strong>Status:</strong>
        <%= f.select(:draft, [['Final', '2']]) %>
      </div>
      <div class="hidden">
        <strong>User name:</strong>
        <%= f.text_field :user_name, :value => current_user.user_name %>
      </div>


    <hr />

      <div class="actions">
        <%= f.submit "Sign Off", :class => 'btn btn-success', :name => "sign_button" %>
      </div>

    <% end %>
  <% else %>
    <p><strong><em>You are not authorized to perform this action.</em></strong></p>
<% end %>
