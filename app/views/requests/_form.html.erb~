<%= form_for @request, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :request, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :request, :class => 'text_field_long', "data-provide" => "typeahead", data: { source: ["Knowledge and/or experience in ", "Awareness and knowledge of ", "Ability to ", "Intellectual ability to understand "]} %>
    </div>
  </div>
  <div class="hidden">
    <%= f.label :user, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user, :class => 'text_field', :value => current_user.user_name %>
    </div>
  </div>
  <div class="hidden">
    <%= f.label :office, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :office, :class => 'number_field', :value => current_user.office %>
    </div>
  </div>
  <div class="hidden">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :status, :class => 'number_field', :value => 1 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                requests_path, :class => 'btn' %>
  </div>
<% end %>
